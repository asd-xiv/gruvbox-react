{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@asd14/gruvbox-react",
  "version": "0.1.0",
  "description": "",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "nx": {
    "tags": [
      "type:react-lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asd-xiv/gruvbox-react.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "exports": {
    "./hooks": {
      "import": "./dist/esm/src/hooks/index.js",
      "require": "./dist/cjs/src/hooks/index.js",
      "types": "./dist/types/src/hooks/index.d.ts"
    },
    "./utils": {
      "import": "./dist/esm/src/utils/index.js",
      "require": "./dist/cjs/src/utils/index.js",
      "types": "./dist/types/src/utils/index.d.ts"
    },
    "./icons-lucide": {
      "import": "./dist/esm/src/icons/lucide.js",
      "require": "./dist/cjs/src/icons/lucide.js",
      "types": "./dist/types/src/icons/lucide.d.ts"
    },
    "./icons-nerd": {
      "import": "./dist/esm/src/icons/nerd.js",
      "require": "./dist/cjs/src/icons/nerd.js",
      "types": "./dist/types/src/icons/nerd.d.ts"
    },
    "./ui": {
      "import": "./dist/esm/src/ui/index.js",
      "require": "./dist/cjs/src/ui/index.js",
      "types": "./dist/types/src/ui/index.d.ts"
    },
    ".": {
      "style": "./dist/styles/index.css"
    },
    "./dist/styles/index.css": "./dist/styles/index.css",
    "./package.json": "./package.json"
  },
  "scripts": {
    "----UTIL": "",
    "prepare:githooks": "git config --local core.hooksPath .githooks",
    "format": "eslint --fix .",
    "----CODE-ANALYSIS": "",
    "lint": "eslint .",
    "typecheck:code": "tsc --noEmit --project tsconfig.lib.json",
    "typecheck:configs": "tsc --noEmit --project tsconfig.dev.json",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "typecheck": "npm run typecheck:code && npm run typecheck:configs && npm run typecheck:test",
    "unit-test": "jest --coverage",
    "---BUILD": "",
    "build:lock": "pu git-has-changed package.json --since HEAD~1 && npm install --no-workspaces --package-lock-only",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.lib.json",
    "build:src:esm": "swc src --out-dir dist/esm --copy-files",
    "build:src:cjs": "swc src --out-dir dist/cjs -C module.type=commonjs --copy-files",
    "build:fonts": "mkdir -p dist/styles && cp -rf src/design-system/fonts dist/styles",
    "build:css": "mkdir -p dist/styles && postcss src/design-system/index.css -o dist/styles/index.css",
    "build": "npm run build:css && npm run build:fonts && npm run build:src:esm && npm run build:src:cjs && npm run build:types"
  },
  "dependencies": {
    "@asd14/node-utils": "^2.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@asd14/eslint-config": "^14.4.0",
    "@asd14/jest-config": "^1.1.1",
    "@asd14/prettier-config": "^1.1.0",
    "@asd14/ts-config": "^1.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "jest": "^30.1.3",
    "lucide-react": "^0.544",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependencies": {
    "lucide-react": "^0.544",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}
