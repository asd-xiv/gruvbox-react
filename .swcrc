{
  "$schema": "https://swc.rs/schema.json",
  "minify": true,
  "sourceMaps": true,
  "exclude": [
    "src/design-system/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "env": {
    "mode": "entry",
    "coreJs": "3",
    "targets": "> 0.25%, not dead"
  },
  "jsc": {
    "externalHelpers": true,
    "minify": {
      "format": {
        "comments": "all"
      }
    },
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "dynamicImport": true
    },
    "transform": {
      "react": {
        "runtime": "automatic"
      }
    }
  }
}
